<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OpenApiGenerateDocuments>false</OpenApiGenerateDocuments>
        <Nullable>disable</Nullable>
        <Authors>Findx</Authors>
        <Company>Findx</Company>
        <Description>Swagger在线文档组件,优化中文展示</Description>
        <PackageVersion>2024.05.08.1</PackageVersion>
        <LangVersion>default</LangVersion>
        <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Findx.AspNetCore\Findx.AspNetCore.csproj" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' != 'net8.0' ">
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net8.0' ">
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
        <PackageReference Include="Microsoft.Extensions.ApiDescription.Server" Version="8.0.4">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
    
</Project>
